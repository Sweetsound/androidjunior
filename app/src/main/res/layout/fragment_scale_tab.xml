<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.sweetsound.androidjunior.ui.ScaleTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:id="@+id/open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gallery_button"
        android:contentDescription="@string/gallery_open_desc"/>
    <ImageButton
        android:id="@+id/take_photo"
        android:layout_below="@+id/open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/camera_button"
        android:contentDescription="@string/take_photo_desc"/>
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ImageView>

</RelativeLayout>
